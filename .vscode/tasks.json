{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Program (MS)",
            "type": "shell",
            "command": "./build",
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Program (SH)",
            "type": "shell",
            "command": "bash scripts/build.sh",
            "group": "build",
            "problemMatcher": "$gcc",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Run Program (MS)",
            "type": "shell",
            "command": "./run",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Run Program (SH)",
            "type": "shell",
            "command": "bash scripts/run.sh",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}